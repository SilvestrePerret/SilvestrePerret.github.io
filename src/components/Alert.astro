---
// Define props with TypeScript interface
interface Props {
  title: string;
  theme?: "info" | "success" | "warning" | "error";
}

const { title, theme = "info" } = Astro.props;

// Define color classes based on the theme (e.g., using Tailwind CSS classes)
const baseClasses = "p-4 rounded-lg";
const themeClasses = {
  info: "bg-blue-100 border-blue-400 text-blue-700",
  success: "bg-green-100 border-green-400 text-green-700",
  warning: "bg-yellow-100 border-yellow-400 text-yellow-700",
  error: "bg-red-100 border-red-400 text-red-700",
}[theme];
---

<div class={`${baseClasses} ${themeClasses} border-l-4`} role="alert">
  <strong class="font-bold">{title}</strong>
  <!-- The slot is for dynamic content passed into the component -->
  <span class="block sm:inline">
    <slot />
  </span>
</div>
