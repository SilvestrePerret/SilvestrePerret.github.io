---
// Define props with TypeScript interface
interface Props {
  theme?: "info" | "success" | "warning" | "error";
}

const { theme = "info" } = Astro.props;

// Define color classes based on the theme (e.g., using Tailwind CSS classes)
const baseClasses = "p-4 mb-4 text-md rounded-lg";
const themeClasses = {
  info: "bg-blue-100 dark:bg-blue-100/20",
  success: "bg-green-100 dark:bg-green-100/20",
  warning: "bg-yellow-100 dark:bg-yellow-100/20",
  error: "bg-red-100 dark:bg-red-100/20 ",
}[theme];
---

<div class={`${baseClasses} ${themeClasses}`} role="alert">
  <slot />
</div>
